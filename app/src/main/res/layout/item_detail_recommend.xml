<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_10">

    <RelativeLayout
        android:id="@+id/item_commend_classify_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_20">

        <TextView
            android:id="@+id/itme_recommend_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_commend_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageView
                    android:id="@+id/item_commend_iv"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@color/gray"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_commend_iv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/name"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:background="@color/blue"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/item_commend_destance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_14"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_20"
                >
                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/item_commend_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    style="@style/roomRatingBar_small"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    />
                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/item_commend_rb_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    style="@style/roomRatingBar_small_full"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_commend_name"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_commend_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageView
                    android:id="@+id/item_commend_iv_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/item_commend_iv_name_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/name"
                    android:textSize="@dimen/text_size_16"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@android:color/holo_orange_dark"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/item_commend_destance_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_14"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_20"
                >
                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/item_commend_rb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    style="@style/roomRatingBar_small"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    />
                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/item_commend_rb_f1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    style="@style/roomRatingBar_small_full"
                    android:stepSize="0.1"
                    android:rating="2"
                    android:isIndicator="true"
                    android:visibility="gone"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/item_commend_name_2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_commend_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageView
                    android:id="@+id/item_commend_iv_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/item_commend_iv_name_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/name"
                    android:textSize="@dimen/text_size_16"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/weChat_bg"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/item_commend_destance_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_16"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_20"
                >
                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/item_commend_rb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    style="@style/roomRatingBar_small"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    />
                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/item_commend_rb_f2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    style="@style/roomRatingBar_small_full"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_commend_name_3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>