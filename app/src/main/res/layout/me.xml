<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/title_bg"
            android:padding="@dimen/padding_5"
            >

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:layout_centerVertical="true"
                android:src="@drawable/go_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_title"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/white"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/padding_30"
            android:padding="@dimen/padding_10"
            >

            <ImageView
                android:id="@+id/head_img"
                android:layout_width="@dimen/padding_80"
                android:layout_height="@dimen/padding_80"
                android:src="@drawable/xiaoming"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/head_img"
                android:layout_marginLeft="@dimen/padding_15"
                android:layout_marginTop="@dimen/padding_10"
                android:text=""
                android:ellipsize="end"
                android:maxEms="12"
                android:singleLine="true"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/black"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_15"
            android:paddingTop="@dimen/padding_15"
            android:background="@color/white"
            android:layout_marginTop="@dimen/padding_30"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tv_mark1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableTop="@drawable/icon_me1"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_5"
                android:text="投稿"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"
                android:background="@color/line"
                />
            <TextView
                android:id="@+id/tv_mark2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableTop="@drawable/icon_me2"
                android:drawablePadding="@dimen/padding_5"
                android:layout_weight="1"
                android:text="收藏"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="@dimen/padding_1"
                android:layout_height="match_parent"
                android:background="@color/line"
                />
            <TextView
                android:id="@+id/tv_mark3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableTop="@drawable/icon_me3"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_5"
                android:text="关注"
                android:singleLine="true"
                android:ellipsize="end"
                />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/padding_30"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_collect"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_1"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/padding_10"
            />
        <RelativeLayout
            android:id="@+id/layout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="@dimen/padding_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新消息通知"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_1"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/padding_10"
            />
        <RelativeLayout
            android:id="@+id/layout_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_version"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>