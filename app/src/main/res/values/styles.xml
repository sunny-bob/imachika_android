<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->

    </style>
    <!--<style parent="Theme.AppCompat.Light.NoActionBar" name="NoTitleTheme"/>-->

    <style name="radio">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/gender_selector</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_10</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="radio_btn">
        <item name="android:textColor">@color/title_text</item>
        <item name="android:background">@drawable/reportr_selector</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_10</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="add_title_one">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/add_title_selector</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="add_title_two">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/add_title_selector_two</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="add_title_three">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/add_title_selector_three</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_20</item>
        <item name="android:layout_marginLeft">@dimen/padding_50</item>
        <item name="android:layout_marginRight">@dimen/padding_50</item>
    </style>
    <style name="edit_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/padding_40</item>
        <item name="android:layout_marginTop">@dimen/padding_20</item>
    </style>
    <style name="edit_email_reg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/padding_40</item>
        <item name="android:layout_marginTop">@dimen/padding_10</item>
    </style>
    <style name="ratingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/google_bg</item>
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
    </style>

    <style name="roomRatingBar_small" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_s_drawable</item>
    </style>

    <style name="roomRatingBar_small_full" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_s_f_drawable</item>
    </style>

    <style name="roomRatingBar_1" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar1_drawable</item>
    </style>

    <style name="loading_dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

</resources>
